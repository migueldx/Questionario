@model Questionario_Agrotools.Models.Questionario

@{
    ViewBag.Title = "Visualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Visualizar</h2>
<div class="form-horizontal">

    <h4>Questionário</h4>
    <hr />

    <h4>@Html.DisplayFor(model => model.Titulo)</h4>
    <dl class="dl-horizontal">

        @{int i = 1;}
        @foreach (var item in Model.Perguntas)
        {


            <dd></dd>
            <dt>@(i++))</dt>
            <dd><b>@Html.DisplayFor(itemModel => item.DescricaoPergunta)</b></dd>
            <dt></dt>
            <dd>@Html.DisplayFor(itemModel => item.DescricaoResposta)</dd>
            if (i > Model.Perguntas.Count)
            {
                <br />
                <dt>@Html.DisplayNameFor(itemModel=>item.DataCadastroResposta)</dt>
                <dd>@Html.DisplayFor(itemModel => item.DataCadastroResposta)</dd>
                <dt>Latitude</dt>
                <dd>@Html.DisplayFor(itemModel => item.Localizacao.Latitude)</dd>

                <dt>Longitude</dt>
                <dd>@Html.DisplayFor(itemModel => item.Localizacao.Longitude)</dd>
            }
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Voltar", "Index")
</p>

